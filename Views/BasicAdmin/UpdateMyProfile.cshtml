@model BasicAdmin
@{
    ViewBag.Title = "UpdateMyProfile";
}

<h2>UpdateMyProfile</h2>

    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>BasicAdmin</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.ApplicationUser.Fname, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ApplicationUser.Fname, new { htmlAttributes = new { @class = "form-control" } })
                     </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ApplicationUser.Lname, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ApplicationUser.Lname, new { htmlAttributes = new { @class = "form-control" } })
                      </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ApplicationUser.BDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ApplicationUser.BDate.Date, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ApplicationUser.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ApplicationUser.Address, new { htmlAttributes = new { @class = "form-control" } })
                  </div>
            </div>
            @Html.HiddenFor(model => model.Salary)
            <div class="form-group">
                <input type="file" value="upload photo" name="img" />
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-outline-info" />
                </div>
            </div>
        </div>

    </form>

    <div>
        @Html.ActionLink("Back to Profile", "Index")
    </div>



