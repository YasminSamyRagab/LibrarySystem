@model adData

<h2>Add Admins</h2>
<div>
    @using (Ajax.BeginForm("AddAdmin", "Admin", "", new AjaxOptions()
    {
        UpdateTargetId = "tablebody",
        InsertionMode = InsertionMode.InsertAfter,
        HttpMethod = "POST",
        OnComplete = "AdminFormAdd"
    }, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.rad.Fname)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.rad.Fname)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.rad.Lname)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.rad.Lname)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.rad.BDate)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.rad.BDate, "{0:dd/MM/yyyy}")
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.rad.Address)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.rad.Address)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.rad.Email)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.rad.Email)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.rad.PhoneNumber)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.rad.PhoneNumber)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.rad.Password)
            </dt>

            <dd>
                @Html.PasswordFor(model => model.rad.Password)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.rad.ConfirmPassword)
            </dt>

            <dd>
                @Html.PasswordFor(model => model.rad.ConfirmPassword)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ad.HireDate)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.ad.HireDate,"{0:dd/MM/yyyy}")
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ad.Salary)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.ad.Salary)
            </dd>
        </dl>
        <input type="submit" class="btn btn-warning form-control" />
}
</div>

@Scripts.Render("~/bundles/jqueryval")



