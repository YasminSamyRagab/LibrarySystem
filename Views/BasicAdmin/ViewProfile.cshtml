@model ApplicationUser
@{
    ViewBag.Title = "View My Profile";
}

    <div class="container">
        <div class="row profile">
            <div class="col-md-3">
                <div class="profile-sidebar">
                    <!-- SIDEBAR USERPIC -->
                    <div></div>

                    <img src=@Model.Photo width="200" height="200" alt="hello">
                    @* ~/Images/8637ada6-f139-417b-bc4f-de4c8151b554.jpg *@
                    <!-- END SIDEBAR USERPIC -->
                    <!-- SIDEBAR USER TITLE -->
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">

                            @Model.Fname  @Model.Lname
                        </div>
                        <div class="profile-usertitle-job">

                        </div>
                    </div>
                    <!-- END SIDEBAR USER TITLE -->
                    <!-- SIDEBAR BUTTONS -->
                    <div class="profile-userbuttons">
                        <a href="/BasicAdmin/DashBoard" class="btn btn-default">Dash Board</a>
                    </div>
                    <!-- END SIDEBAR BUTTONS -->
                    <!-- SIDEBAR MENU -->
                    <div class="profile-usermenu">
                        <ul class="nav">
                            <li class="active">
                                <a href="\Admin\AdminForm" class="btn btn-success">
                                    Admins
                                </a>
                            </li>

                            <li>
                                <a href="\Employee\EmployeeForm" class="btn btn-info">
                                   
                                    Employess
                                </a>
                            </li>
                            <li>
                                <a href="\Member\MemberForm" class="btn btn-primary">
                                    Members
                                </a>
                            </li>

                        </ul>
                    </div>
                    <!-- END MENU -->
                </div>
            </div>
            <div class="col-md-9">
                <div class="profile-content">
                  
                        <p> First Name: @Model.Fname</p>
                        <br/><br/>
                        <p> Last Name: @Model.Lname</p>
                    <br /><br />
                        <p> Birthday: @Model.BDate.ToShortDateString()</p>
                    <br /><br />
                        <p>Address: @Model.Address</p>
                
                </div>

                <a href="/BasicAdmin/UpdateMyProfile/@Model.Id" class="btn btn-dark">Update your Profile</a>
            </div>
        </div>
    </div>
    <center>
        <strong>Powered by <a href="" target="_blank"></a></strong>
        @*<img src="~/Images/8637ada6-f139-417b-bc4f-de4c8151b554.jpg" width="200" height="200" alt="hello">*@
    </center>
    <br>
    <br>
   
